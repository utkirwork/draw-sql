            'OPTIONS <action>' => 'options',
            'OPTIONS <action>/<id:>' => 'options'{{#each extraPatterns}},
            '{{method}} {{pattern}}' => '{{action}}'{{/each}}
        ]
    ]{{#unless @last}},{{/unless}}
{{/each}}
